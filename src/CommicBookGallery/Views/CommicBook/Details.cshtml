@Model CommicBookGallery.Models.CommicBook

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.DisplayText;
    
}


    <div>
        <h1>@Model.Message</h1>
        <h1>@Model.SeriesTitle</h1>

        <h3>Issue #@Model.IssueNumber</h3> 
        <h3> @Html.Raw(Model.DescriptionHtml)</h3>

            <h2>Artists:</h2>

            @if (Model.Artists.Length > 0)
            {
             <ul>
                @foreach (var artist in Model.Artists)
                {
                    <li>@artist.Role: @artist.Name </li>
                }
             </ul>
            }
    </div>
